@model Student
<div class="mt-5">
    <h5>Add Student</h5>
    <form method="post" asp-action="Create">
        <div class="row">
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label">Number</label>
                    <input type="number" class="form-control" asp-for="Number" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label">Surname</label>
                    <input type="text" class="form-control" asp-for="Surname" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label">Classroom</label>
                    <input type="text" class="form-control" asp-for="Classroom" />
                    <span asp-validation-for="Classroom" class="text-danger"></span>
                </div>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-light">Back</a>
                <button type="submit" class="btn btn-primary ms-3">Add</button>
            </div>
        </div>
    </form>
</div>